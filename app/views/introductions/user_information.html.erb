<div class="container mt-4">
  <div class="card" style="width: 18rem;">
    <%= image_tag current_user.proimg, alt: "user_face", width: '286', height: '286' %>
    <div class="card-header">
      이름: <%= current_user.name %>
    </div>
    <ul class="list-group list-group-flush">
      이메일: <li class="list-group-item"><%= current_user.email %></li>
      학번: <li class="list-group-item"><%#= current_user.name %></li>
    </ul>
    <div class="card-body">
      <%= link_to fa_icon("pencil", text: "Edit Profile"), edit_user_registration_path, class: "btn btn-primary" %>
      <%= link_to fa_icon("plane", text: "Logout"), destroy_user_session_path, method: :delete,class: "btn btn-danger" %>
    </div>
  </div>
</div>