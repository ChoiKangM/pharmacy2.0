<div class="container">
    <h3 class="text-center my-4">7기 - 15학번</h3>
    <div class="row">
        <% @thirdGrade15.each do |student| %>
            <div class="col-lg-3 col-sm-4 col-6">
                <%= image_tag "/assets/thirdGrade15/#{student}" ,class: "img-thumbnail"%>
                <%= content_tag(:p, "#{student.split('.').first.split(' ').last}", class: ["text-muted", "text-center"])%>  
            </div>
        <% end %>
    </div>
</div>