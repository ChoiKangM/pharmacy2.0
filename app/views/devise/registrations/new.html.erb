<div class="container my-4">
  <%= devise_error_messages! %>
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <h2><%= t('.sign_up', default: 'Sign up') %></h2>
    </div>
    <div class="panel-body pt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control col-md-6 col-12' %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: 'form-control col-md-6 col-12' %>
        </div>
        <div class="form-group">
          <%= f.label :nickname %>
          <%= f.text_field :nickname, autofocus: true, class: 'form-control col-md-6 col-12' %>
        </div>
        <div class="form-group">
          <%= f.label :duty %>
          <%= f.text_field :duty, autofocus: true, class: 'form-control col-md-6 col-12' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autofocus: true, class: 'form-control col-md-6 col-12', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control col-md-6 col-12' %>
        </div>
        <div class="form-group">
          <%= f.label :user_face %>
          <br/>
          <%= f.file_field :user_face %>
          <%= f.hidden_field :user_face_cache %>
        </div>
        <div class="form-actions pt-2">
          <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>