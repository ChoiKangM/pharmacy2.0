<div class="container my-4">
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <h2><%= t('.sign_in',default: 'Login') %></h2>
    </div>
    <div class="panel-body pt-3">
      <%= link_to fa_icon("google", text: "Sign in with Google"), user_google_oauth2_omniauth_authorize_path, class: "btn btn-outline-dark col-md-6 mb-2" %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control col-md-6 col-12" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: 'off', class: "form-control col-md-6 col-12"  %>
        </div>
        <%= f.submit t('.sign_in', default: 'Login'), class: "btn btn-primary" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>