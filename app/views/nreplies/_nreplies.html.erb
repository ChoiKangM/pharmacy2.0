<% @nreplies.each do |n| %>
  <div class="row mx-0 px-0 my-2 justify-content-around">
    <p class="d-flex align-items-center ml-2 mr-auto">
      <%= n.content %>
    </p>
    <div class="d-flex justify-items-end">
      <p class="d-flex align-items-center">
        <%= distance_of_time_in_words(n.created_at,Time.now) %> 전
      </p>
      <p class="d-flex align-items-center">
        <%= link_to fa_icon("trash-o 2x"), notice_nreply_path(@notice,n), method: :delete, class: "btn text-danger",data:{confirm: "진짜 삭제합니까?"} %>
      </p>
    </div>
  </div>
<% end %>