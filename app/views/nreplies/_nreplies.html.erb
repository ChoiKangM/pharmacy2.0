<% @nreplies.each do |n| %>
  <div class="round-panel row mx-0 px-0 my-2">
    <p class="col-12 col-md-8 mb-0 d-flex align-items-center">
      <%= n.content %>
    </p>
    <p class="col-6 col-md-2 mb-0 d-flex align-items-center">
      <%= distance_of_time_in_words(n.created_at,Time.now) %> 전
    </p>
    <p class="col-6 col-md-2 mb-0 d-flex align-items-center">
      <%= link_to fa_icon("trash 2x"), notice_nreply_path(@notice,n), method: :delete, class: "btn btn-outline-danger",data:{confirm: "진짜 삭제합니까?"} %>
    </p>
  </div>
<% end %>