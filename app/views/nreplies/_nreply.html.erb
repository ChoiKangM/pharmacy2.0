<div class="row">
	<%= form_for([@notice,@nreply],html: { class: "w-100 d-flex flex-nowrap"}) do |c| %>
		<%= c.hidden_field :notice_id, value: @notice.id %>
		<%= c.hidden_field :user_id, value: current_user.id %>
		<%= c.text_field :content, class: "form-control rounded-0 border-right-0 ml-2" %>
		<%= button_to "댓글", notice_nreplies_path(@notice), method: :post, class: "btn btn-white border rounded-0 mr-2" %>
	<% end %>
</div>