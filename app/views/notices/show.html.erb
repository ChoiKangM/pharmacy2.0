<div class="container my-4">
  <div class="card">
    <div class="card-header row px-2 py-4 mx-0">
      <h2 class="col-md-8 col-12"><%= @notice.title %></h2>
      <h4 class="col-md-2 col-6"><%= @notice.user.name %></h4>
      <h4 class="col-md-2 col-6"><%= distance_of_time_in_words(@notice.created_at, Time.now) %> ì „</h4>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @notice.content.html_safe %></p>
      <% if current_user.id == @notice.user.id %>
        <%= link_to fa_icon("pencil 2x"), edit_notice_path(@notice), class: "btn btn-warning" %>
        <%= link_to fa_icon("trash-o 2x"), notice_path(@notice), method: :delete, class: "btn btn-danger"%>
      <% end %>
    </div>
    <div class="card-footer">
      <%= render 'nreplies/nreply' %>
      <%= render 'nreplies/nreplies' %>
    </div>
  </div>
</div>