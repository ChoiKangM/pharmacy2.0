<div class="container my-4">
  <%= form_for(@notice) do |n| %>
    <%= n.hidden_field :user_id, value: current_user.id %>
    <div class="form-group">
      <%= n.label :title, value: "제목" %>
      <%= n.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= n.label :content, value: "내용" %>
      <%= n.text_area :content, class: "tinymce", :rows => 15, :cols => 120 %>
      <%= tinymce %>
    </div>
    <%= button_to "편집하기", notices_path, method: :patch, class: "btn border" %>
  <% end %>
</div>