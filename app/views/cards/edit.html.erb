<div class="container my-4">
  <%= form_for(@card, html: { multipart: true }) do |c| %>
    <%= c.hidden_field :user_id, value: current_user.id %>
    <div class="form-group">
      <%= c.label :title, value: "제목" %>
      <%= c.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= c.label :content, value: "내용" %>
      <%= c.text_area :content, class: "form-control", rows: 6 %>
    </div>
    <div class="form-group">
      <%= c.label :image, value: "이미지" %>
      <%= c.file_field :image, class: 'form-control' %>
    </div>
    <%= button_to "편집하기", card_path, method: :patch, class: "btn btn-primary" %>
  <% end %>
</div>