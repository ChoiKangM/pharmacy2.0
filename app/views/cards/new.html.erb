<div class="container my-4">
  <%= form_for(@card, html: { multipart: true }) do |c| %>
    <%# <%= c.hidden_field :user_id, value: current_user.id %> %>
    <div class="form-group">
      <%= c.label :title, value: "제목" %>
      <%= c.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= c.label :content, value: "내용" %>
      <%= c.text_area :content, class: "tinymce", :rows => 15, :cols => 120 %>
      <%= tinymce %>
    </div>
    <div class="form-group">
      <%= c.label :images, value: "이미지" %>
      <%= c.file_field(:images, multiple: true,class: 'form-control') %>
    </div>
    <%= button_to "게시하기", cards_path, method: :post, class: "btn btn-primary" %>
  <% end %>
</div>