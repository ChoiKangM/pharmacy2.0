<div class="container my-4">
  <%= form_for(@make_public, html: { multipart: true }) do |h| %>
    <%= h.hidden_field :user_id, value: current_user.id %>
    <div class="form-group">
      <%= h.label :kind, value: "정보공개" %><br/>
      <%= h.select :kind, ['회의록', '회계자료','기타','운영규정'] %>
    </div>
    <div class="form-group">
      <%= h.label :informations, value: "자료뮬" %>
      <%= h.file_field(:informations, multiple: true, class: 'form-control') %>
    </div>
    <div class="form-group">
      <%= h.label :title, value: "제목" %>
      <%= h.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= h.label :content, value: "내용" %>
      <%= h.text_area :content, class: "tinymce", :rows => 15, :cols => 120 %>
      <%= tinymce %>
    </div>
    
    <%= button_to "수정하기", make_public_path, method: :patch, class: "btn btn-primary" %>
  <% end %>
</div>