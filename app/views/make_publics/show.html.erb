<div class="container my-4">
  <div class="card">
    <div class="card-body">
      <h4 class="d-flex justify-content-between align-items-center text-weight-bold">
        <%= @make_public.title %>
        <div>
          <% if current_user.id == @make_public.user.id %>
            <%= link_to fa_icon("pencil 2x"), edit_make_public_path(@make_public), class: "btn text-success" %>
            <%= link_to fa_icon("trash-o 2x"), make_public_path(@make_public), method: :delete, class: "btn text-danger",data: {confirm: "진짜 삭제합니까?"}%>
          <% end %>
        </div>
      </h4>
      <div class="text-right text-muted ml-1">
        <h6 class="mb-1"><%= @make_public.user.name %></h6>
        <h6 class=""><%= distance_of_time_in_words(@make_public.created_at, Time.now) %> 전</h6>
        <h6><%= @make_public.created_at.to_s.delete('UTC') %></h6>
      </div>
      <div class="text-right">
        <% @make_public.informations.each do |information| %>
          <%= link_to fa_icon("download 2x"), information.url, class: "btn text-primary mr-2" %>
        <% end %>
      </div>
      <p class="card-text mx-2">
        <%= @make_public.content.html_safe %>
      </p>
    </div>
  </div>  
</div>
