<div class="container mt-5 table-reponsive" style="min-height: 900px">
  <h3 class="text-center">운영규정</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">제목</th>
        <th scope="col">작성자</th>
        <th scope="col">시간</th>
      </tr>
    </thead>
    <tbody>
      <% @other.each do |m| %>
        <tr>
          <th scope="row">
            <% if @page == 0 %>
              <%= @other_length - @other.index(m) %>
            <% else %>
              <%= @other_length - ((@page-1)*@post_per_page + @other.index(m)) %>
            <% end %>
          </th>
          <td><%= m.title.first(7) %></td>
          <td><%= m.user.name.first(5) %></td>
          <td><%= distance_of_time_in_words(m.created_at,Time.now) %> 전</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center mt-2">
    <%= paginate @other, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
  </div>
</div>