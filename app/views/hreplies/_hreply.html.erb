<div class="row">
	<%= form_for([@handout,@hreply],html: { class: "w-100 d-flex flex-nowrap"}) do |c| %>
		<%= c.hidden_field :handout_id, value: @handout.id %>
		<%= c.hidden_field :user_id, value: current_user.id %>
		<%= c.text_field :content, class: "form-control rounded-0 border-right-0 ml-2" %>
		<%= button_to "댓글", handout_hreplies_path(@handout), method: :post, class: "btn btn-white border rounded-0 mr-2" %>
	<% end %>
</div>